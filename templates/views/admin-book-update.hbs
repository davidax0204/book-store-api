        <form id="sign-up-form" method="POST" action="/profile/admin/books/updateBook/{{book._id}}">
                <div class="container">
                  <h1>Update Book</h1>
                  <hr>

                    <div class="sign-up-line-wrap">
                        <label for="name"><b>Book title</b></label>
                        <label for="">{{book.name}}</label>
                        <input type="text" placeholder="Enter Book title" name="name">
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="author"><b>Author</b></label>
                        <label for="">{{book.author}}</label>
                        <input type="text" placeholder="Enter book author" name="author" >
                    </div>
                    
                    <div class="sign-up-line-wrap">
                        <label for="description"><b>Description</b></label>
                        <textarea class="text-area-margin" type="text" placeholder="" name="description" rows="20"  readonly>{{book.description}}</textarea>
                        <textarea type="text" placeholder="Enter book edited description" name="description" rows="20"  ></textarea>
                    </div>


                    <div class="sign-up-line-wrap">
                        <label for="format"><b>Format</b></label>
                        <label for="">{{book.format}}</label>
                        <input type="text" placeholder="Enter book format" name="format" >
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="dimensions"><b>Dimensions</b></label>
                        <label for="">{{book.dimensions}}</label>
                        <input type="text" placeholder="Enter book dimensions" name="dimensions" >
                    </div>
                    
                    <div class="sign-up-line-wrap">
                        <label for="publicationDate"><b>Publication date</b></label>
                        <label for="">{{book.publicationDate}}</label>
                        <input type="text" placeholder="Enter book publisher" name="publicationDate" >
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="publisher"><b>Publisher</b></label>
                        <label for="">{{book.publisher}}</label>
                        <input type="text" placeholder="Enter book publisher" name="publisher" >
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="publication"><b>Publication Country</b></label>
                        <label for="">{{book.publication}}</label>
                        <input type="text" placeholder="Enter book publication" name="publication" >
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="language"><b>Language</b></label>
                        <label for="">{{book.language}}</label>
                        <input  type="text" placeholder="Enter book language" name="language" >
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="image"><b>Image</b></label>
                        <img width="200px" style="padding-bottom: 10px; margin-left: auto; margin-right: auto;" src="{{book.image}}" alt="">
                        <input type="text" placeholder="Enter book image URL" name="image" >
                    </div>

                    <div class="sign-up-line-wrap">
                        <label for="price"><b>Price</b></label>
                        <label for="">{{book.price}}$</label>
                        <input type="number" step=".01" placeholder="Enter book price" name="price" >
                    </div>



                  <div id="emailErrorMSG" class="profile-line psw-warning-msg open-warning-msg">{{errorMSG}}</div>

                  <hr>

                  <button type="submit" class="registerbtn">Submit changes</button>
                </div>
              
                
            </form>
            
