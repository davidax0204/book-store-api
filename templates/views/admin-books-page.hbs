</head>
<body>
    <div class="nav-container">
        <div class="navigation-bar">
            
            <div class="mobile-menu ">
                <button id="menu-button-mobile" class="main-menu menu-butttonnnn noHover">
                    <div class="menu-line" id="menu-line-top"></div>
                    <div class="menu-line" id="menu-line-middle"></div>
                    <div class="menu-line" id="menu-line-bottom"></div>
                </button>
                <div id="myLinks">
                    <a class="mobile-menu-search-container">
                        <input type="text" placeholder="Search for books by keyword / title /auther">
                        <button type="submit" id="mobile-menu-search-button"><i class="fa fa-search"></i></button>
                    </a>
                    <a href="#about">
                        <span>Cart </span>
                        <i class="fa fa-shopping-cart"></i>
                    </a>
                    <a href="/sign-up">
                        <span>Sign in/Join  </span>
                        <i class="user-button fa fa-user"></i>
                    </a>
                </div>
            </div>

            <div class="logo-container">
                <a href="/">
                <img class="header-logo" src="/pictures/Logo.png" alt="">
                    {{!-- <img class="header-logo" src="NODE-COURSE/book-store/public/pictures/Logo.png" alt=""> --}}
                </a>
            </div>

           <div class="container-admin">
                {{!-- <input type="text" placeholder="Search for books by keyword /title /auther"> --}}
                
                <form method="GET" action="/profile/admin/users"><button class="admin-users-button" type="submit" >Users</button></form>
                <form method="GET" action="/profile/admin/books"><button class="admin-users-button" type="submit" >Books</button></form>
                <form method="GET" action="/profile/admin/createBook"><button class="admin-users-button" type="submit" >Add book</button></form>
                
           </div>
            <div class="header-user-button"  style="font-size: 24px;">
                {{!-- <a href="/sign-up">
                    <button class="header-user-button-inner">
                        <i id="user" class="user-button fa fa-sign-in fa-lg"></i>
                        <!-- <span class="sign-in-button-inner-text"></span> -->
                    </button>
                </a> --}}
                <a href="/profile">
                    <button class="header-user-button-inner">
                        <i id="user" class="user-button fa fa-user fa-lg"></i>
                        <!-- <span class="sign-in-button-inner-text"></span> -->
                    </button>
                </a>
                {{!-- <button class="header-user-button-inner">
                    <i class="fa fa-shopping-cart fa-lg"></i>
                    <!-- <span class="sign-in-button-inner-text"></span> -->
                </button> --}}
            </div>
            
        </div>
        
    </div>
        <div class="main-content">
            <div class="main-content-inner-part-admin">
                {{#each books}}
                    <div class="book-card">
                        <div class="book-card-wrap">
                            <img src="{{image}}" alt="">
                            <div class="book-title-admin"><b>{{name}}</b></div>
                            <div class="book-author-admin">{{author}}</div>
                            <b><div style="font-size: 20px;" class="book-price-admin">{{price}}$</div></b>
                            <div class="book-card-buttons">
                                <form method="GET" action="/profile/admin/books/updateBook/{{_id}}"><button class="admin-users-button" type="submit" >Edit book details</button></form>
                                <form method="POST" action="/profile/admin/books/delete/{{_id}}"><button class="admin-users-button" type="submit" >Remove book</button></form>
                            </div>
                        </div>
                    </div>       

                {{/each}}
            </div>
        </div>



                    
                    

                
        
</body>
</html>